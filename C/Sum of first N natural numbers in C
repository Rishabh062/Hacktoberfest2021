#include <stdio.h>  
#include <conio.h>  
void main()  
{  
    int num, i, sum = 0;   
    printf(" Enter a positive number: ");  
    scanf("%d", &num);  
     
    for (i = 0; i <= num; i++)  
    {  
        sum = sum + i; // at each iteration the value of i is added to the sum variable  
    }  
   
    printf("\n Sum of the first %d number is: %d", num, sum);   
    getch();  
}  
